    <main>
      <% if (products.length > 0) {%>
      <ul>
        <% products.forEach(p => { %>
        <li>
          <h4><%= p.productData.title %> (<%= p.quantity %>)</h4>
          <p><%= p.productData.description %></p>

          <h3>$<%= p.priceProducts %></h3>
