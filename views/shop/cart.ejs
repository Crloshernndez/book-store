            <input
              type="hidden"
              value="<%=p.productData.id%>"
              name="productId"
            />
            <button class="btn" type="submit">Delete</button>
          </form>
        </li>
        <hr />
        <% }) %>
      </ul>
      <hr />
      <h3>total price</h3>
    </n>
    <h2>$<%= totalPrice %></h2>

      <% } else { %>
